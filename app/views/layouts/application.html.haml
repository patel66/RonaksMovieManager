%html
  /[if lt IE 7]
    %html.no-js.lt-ie9.lt-ie8.lt-ie7
  /[if IE 7]
    %html.no-js.lt-ie9.lt-ie8
  /[if IE 8]
    %html.no-js.lt-ie9
  /[if gt IE 8]
    %html.no-js
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %title= "Ronaks Movie Manager"
    -#TODO fill in description
    %meta{:content => "", :name => "description"}
    %meta{:content => "width=device-width", :name => "viewport", "initial-scale" => '1.0'}
    %meta{:content => "initial-scale=1.0", :name => "viewport"}
    -#TODO add favicon
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "animation"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    = render 'layouts/navigation'
    %p.alert-warning= notice
    %p.alert-warning= alert
    =yield
    = render 'layouts/footer'

